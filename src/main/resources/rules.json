{
  "rules": [
    {
      "type": "source.xml",
      "id": "sample",
      "brief": "Connector test framework must not be overwritten.",
      "description": "Connectors testing framework must not be overwritten. This could produce unexpected errors once the devkit version is migrated. Remove the property 'connector.test.version' from the pom.xml.",
      "section": "Best Practices",
      "acceptRegexp": ".+/some.xml$",
      "verifyExpression": "boolean(/*[local-name() = 'project']/*[local-name() = 'properties']/*[local-name() = 'connector.test.version']/text())"
    },
    {
      "type": "source.pom",
      "id": "ctf_version_overwritten",
      "brief": "Connector test framework must not be overwritten.",
      "description": "Connectors testing framework must not be overwritten. This could produce unexpected errors once the devkit version is migrated. Remove the property 'connector.test.version' from the pom.xml.",
      "section": "Best Practices",
      "verifyExpression": "not(/pom:project/pom:properties/pom:connector.test.version/node())"
    },
    {
      "type": "structure",
      "id": "structure.readme",
      "brief": "Structure validation ...",
      "description": "",
      "section": "Best Practices",
      "acceptRegexp": "src/test/java$",
      "verifyExpression": "src/test/java/${connector.package}/automation/functional/${processor.name}TestCases.java"
    },
    {
      "type": "source.java",
      "id": "connector.processor.default_payload",
      "brief": "",
      "description": "",
      "section": "Best Practices",
      "acceptRegexp": ".+/.+Connector.java$",
      "verifyExpression": "org.mule.tools.devkit.sonar.rule.sverifier.DefaultPayloadVerifier"
    },
    {
      "type": "source.java",
      "id": "connector.processor.params",
      "brief": "",
      "description": "It's strongly recommended that all mandatory parameters be defined as part of the payload. Consider creating a complex object as grouping all the parameters.",
      "section": "Best Practices",
      "acceptRegexp": ".+/.+Connector.java$",
      "verifyExpression": "org.mule.tools.devkit.sonar.rule.sverifier.ProcessorParametersVerifier"
    },
    {
      "type": "source.java",
      "id": "connector.processor.refonly",
      "brief": "",
      "description": "Complex types should should be marked with @RefOnly.",
      "section": "Best Practices",
      "acceptRegexp": ".+/.+Connector.java$",
      "verifyExpression": "org.mule.tools.devkit.sonar.rule.sverifier.RefOnlyParametersVerifier"
    }
  ]
}